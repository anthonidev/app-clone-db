{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DB Clone",
  "version": "0.6.0",
  "identifier": "com.dbclone.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DB Clone - PostgreSQL Cloning Tool",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI4N0YyQkFGQTM5QjVFODYKUldTR1hwdWpyeXQvdUhuVitoN2ZBZnFmRy8xMURBTHVYMnd3SDVaN0lQZXRkWVR4cktta3NYN2kK",
      "endpoints": [
        "https://github.com/anthonidev/app-clone-db/releases/latest/download/latest.json"
      ]
    }
